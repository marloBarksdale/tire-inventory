<% if (prods.length > 0) { %>

<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">Recently Added</h1>
  </div>
</section>

<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      <% prods.forEach((product)=>{%>
      <div class="col-md-4">
        <div class="card mb-4 box-shadow">
          <img
            class="card-img-top"
            src="<%=product.image%>"
            style="height: 225px; width: 100%; display: block"
          />
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <h4>
                <a href="<%=product.url%>"><%=product.name%></a>
              </h4>
              <span
                class="badge badge-primary badge-pill h6 badge-<%=product.status%>"
              >
                <%=product.quantity%>
              </span>
            </div>
            <p class="mb-5 block">
              <span class="card-text"
                ><a href="<%=product.manufacturer.url%>"
                  ><%=product.manufacturer.name%></a
                ></span
              >
              |
              <span class="card-text"
                ><a href="<%=product.season.url%>"
                  ><%=product.season.name%></a
                ></span
              >
              |
              <span class="card-text"
                ><a href="<%=product.size.url%>"
                  >Size <%=product.size.diameter%></a
                ></span
              >
            </p>
          </div>
        </div>
      </div>
      <%}) %>
    </div>
  </div>
</div>

<% } %>
